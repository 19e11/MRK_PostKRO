<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Update</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
      
    <style>
      @font-face {
        font-family: 'BoldOnse';
        src: url('../public/fonts/Boldonse-Regular.ttf') format('truetype');
      }
      .font-boldonse {
        font-family: 'BoldOnse';
      }
    </style>
  </head>

  <body class="bg-black text-gray-200">
    
    <!-- NAV BAR -->
    <div class="flex flex-col md:flex-row justify-between gap-4 p-6">

      <a class="text-4xl md:text-5xl font-boldonse tracking-wide text-white cursor-pointer" href="/home">
        PostKRO
      </a>

      <div class="flex flex-wrap gap-3 items-center">
        <a href="/profile" class="font-boldonse px-4 py-2 border border-cyan-500/30 rounded-lg hover:bg-cyan-500/30 transition">
          Profile
        </a>
        <a href="/logout" class="font-boldonse px-4 py-2 border border-red-500/30 rounded-lg hover:bg-red-500/30 transition">
          Logout
        </a>
      </div>

    </div>

    <!-- MAIN UPLOAD AREA -->
    <div class="w-full min-h-[85vh] flex items-center justify-center px-4">

      <div class="bg-zinc-800 border border-zinc-700 rounded-xl p-6 sm:p-10 w-full max-w-md shadow-lg">

        <h3 class="text-2xl font-semibold mb-6 text-center">
          Update Profile Picture
        </h3>

        <!-- PREVIEW IMAGE -->
        <div class="w-full flex justify-center mb-5">
          <img 
            id="previewImg"
            src="<%= user?.image || 'https://ik.imagekit.io/19e11/PostKRO/Default.jpg' %>" 
            class="w-28 sm:w-32 h-28 sm:h-32 rounded-full object-cover border border-gray-600"
          />
        </div>

        <!-- FORM -->
        <form action="/upload" method="post" enctype="multipart/form-data" class="space-y-5">

          <input 
            type="file" 
            id="imageInput"
            name="image"
            accept="image/*"
            class="block w-full text-sm text-gray-300 file:bg-zinc-700 file:border-0 file:px-4 file:py-2 
                   file:rounded-md file:text-gray-200 hover:file:bg-zinc-600"
          />

          <input 
            type="submit" 
            value="Upload Picture"
            class="w-full bg-blue-500 hover:bg-blue-600 text-black font-semibold py-2 rounded-md cursor-pointer transition"
          />

        </form>

      </div>

    </div>

    <script>
      const imageInput = document.getElementById("imageInput");
      const previewImg = document.getElementById("previewImg");

      imageInput.addEventListener("change", function() {
        const file = this.files[0];
        if (file) {
          previewImg.src = URL.createObjectURL(file);
        }
      });
    </script>

  </body>
</html>
